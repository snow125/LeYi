<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height">

    <ImageView
        android:id="@+id/comment_owner_picture"
        android:background="@drawable/default_pic"
        style="@style/listview_picture"
        android:layout_width="@dimen/listview_item_picture_height"
        android:layout_height="@dimen/listview_item_picture_height" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/item_pic2word"
        android:layout_toRightOf="@id/comment_owner_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/comment_owner_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/test_textword"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="@dimen/item_name"/>

        <TextView
            android:id="@+id/comment_owner_comments"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="@string/test_textword"
            android:layout_below="@id/comment_owner_name"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="@dimen/item_request"/>

    </RelativeLayout>

</RelativeLayout>
