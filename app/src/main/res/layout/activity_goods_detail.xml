<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yhd.think.leyi.activity.GoodsDetailActivity">

    <RelativeLayout
        style="@style/actionbar">

        <ImageView
            android:id="@+id/activity_detail_back"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            style="@style/actionbar_weight_left"
            android:src="@drawable/actionbar_back"/>

        <TextView
            style="@style/actionbar_weight_center"
            android:text="@string/activity_goods_detail"/>

        <ImageView
            android:id="@+id/activity_detail_save"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            style="@style/actionbar_weight_right"
            android:background="@drawable/detail_save"/>

    </RelativeLayout>

    <com.yhd.think.leyi.view.SuspendScrollView
        android:id="@+id/activity_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/loop_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/info_view"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </LinearLayout>

                <com.yhd.think.leyi.view.ListViewInScroll
                    android:id="@+id/activity_detail_listview_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                </com.yhd.think.leyi.view.ListViewInScroll>

            </LinearLayout>

            <include
                android:id="@+id/top_info_view"
                layout="@layout/suspend">
            </include>

        </FrameLayout>

    </com.yhd.think.leyi.view.SuspendScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="短信"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="我要换"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="评论"/>

    </LinearLayout>

</LinearLayout>
