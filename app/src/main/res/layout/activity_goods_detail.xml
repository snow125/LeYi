<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yhd.think.leyi.activity.GoodsDetailActivity">

    <RelativeLayout
        style="@style/actionbar">

        <ImageView
            android:id="@+id/activity_detail_back"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            style="@style/actionbar_weight_left"
            android:background="@color/actionbar_weight"/>

        <TextView
            style="@style/actionbar_weight_center"
            android:text="@string/activity_goods_detail"/>

        <ImageView
            android:id="@+id/activity_detail_save"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            style="@style/actionbar_weight_right"
            android:background="@color/actionbar_weight"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <imbryk.viewPager.LoopViewPager
            android:id="@+id/activity_detail_viewpager"
            android:layout_width="match_parent"
            android:layout_height="200dp">
        </imbryk.viewPager.LoopViewPager>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activity_detail_viewpager_pic1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginRight="10dp"
                android:background="#000000"/>
            <ImageView

                android:id="@+id/activity_detail_viewpager_pic2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="#000000"/>

            <ImageView
                android:id="@+id/activity_detail_viewpager_pic3"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="10dp"
                android:background="#000000"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/owner_picture"
            android:background="@drawable/default_pic"
            style="@style/listview_picture"
            android:layout_width="@dimen/listview_item_picture_height"
            android:layout_height="@dimen/listview_item_picture_height" />

        <RelativeLayout
            android:id="@+id/owner_message"
            android:layout_marginLeft="@dimen/item_pic2word"
            android:layout_toRightOf="@id/owner_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="@string/test_textword"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textSize="@dimen/item_name"/>

            <TextView
                android:id="@+id/owner_words"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="@string/test_textword"
                android:layout_below="@id/owner_name"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/item_request"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/onwer_tel"
                android:layout_width="@dimen/actionbar_weight"
                android:layout_height="@dimen/actionbar_weight"
                android:background="@color/actionbar_weight"/>
            <ImageView
                android:id="@+id/onwer_message"
                android:layout_marginLeft="10dp"
                android:layout_width="@dimen/actionbar_weight"
                android:layout_height="@dimen/actionbar_weight"
                android:background="@color/actionbar_weight"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/good_detail_marginleft"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="@dimen/good_detail_marginleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/test_textword"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:textSize="@dimen/item_name"/>

            <TextView
                android:id="@+id/goods_words"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="@string/test_textword"
                android:layout_below="@id/goods_name"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/item_request"/>

        </RelativeLayout>


        <ImageView
            android:id="@+id/goods_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            android:background="@color/actionbar_weight"/>

    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/good_detail_marginleft"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <TextView
        android:id="@+id/goods_request"
        android:layout_marginLeft="@dimen/good_detail_marginleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_textword"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/item_request"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/good_detail_marginleft"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/good_detail_marginleft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/goods_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_detail_comments"
            android:singleLine="true"
            android:textSize="@dimen/item_request"/>

        <TextView
            android:id="@+id/activity_detail_watch_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/goods_comments"
            android:text="查看评论"/>

        <ImageView
            android:id="@+id/goods_want_comment"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            android:background="@color/actionbar_weight"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/activity_detail_listview_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">
    </ListView>

</LinearLayout>
