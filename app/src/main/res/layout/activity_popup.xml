<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44c1c1c1"
    android:orientation="vertical"
    tools:context="com.yhd.think.leyi.activity.PopupActivity">

    <RelativeLayout
        android:background="#ffffffff"
        android:id="@+id/pop_sort_click_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="96dp">

        <ImageView
            android:id="@+id/pop_sort_click"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            android:background="@color/actionbar_weight"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览量"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffffff"
        android:id="@+id/pop_sort_time_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pop_sort_time"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            android:background="@color/actionbar_weight"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="#ffffffff"
        android:id="@+id/pop_sort_distance_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pop_sort_distance"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            android:background="@color/actionbar_weight"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>
