<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.GoodsFragment"
    android:background="@color/main_color"
    >

    <RelativeLayout
        style="@style/actionbar">

        <com.yhd.think.leyi.view.NetworkCircleImageView
            android:id="@+id/actionbar_menu"
            android:layout_width="@dimen/actionbar_weight_yuan"
            android:layout_height="@dimen/actionbar_weight_yuan"
            style="@style/actionbar_weight_left"
            />

        <TextView
            android:layout_toRightOf="@id/actionbar_menu"
            style="@style/actionbar_weight_center"
            android:text="@string/myapp_name"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/actionbar_search"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight"
            android:src="@drawable/actionbar_search_yuan"
            android:layout_toLeftOf="@+id/iv_school"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/iv_school"
            android:src="@drawable/location"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="@dimen/actionbar_weight"
            android:layout_height="@dimen/actionbar_weight" />

    </RelativeLayout>
    <!--一下暂时不显示-->
        <LinearLayout
            android:id="@+id/sort"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >
            <!--android:layout_height="@dimen/activity_tabs"-->
            <RelativeLayout
                android:id="@+id/fragment_goods_location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/city"/>

            </RelativeLayout>

           <RelativeLayout
                android:id="@+id/fragment_goods_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/species"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_goods_sort"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sort"/>

            </RelativeLayout>


        </LinearLayout>
        <!--以上中间部分暂时不显示,宽高都已经设为0-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/beautiful_fragment"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/book_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/books_yuan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书籍"
                    android:layout_gravity="center"
                    android:textColor="#b1b1b1"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/pe_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sports_yuan"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文体"
                    android:textColor="#b1b1b1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/live_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/commodities_yuan"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生活用品"
                    android:textColor="#b1b1b1"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/c3c_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/c3c_yuan"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数码/电器"
                    android:textColor="#b1b1b1"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/clothing_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:src="@drawable/clothing_yuan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服装"
                    android:layout_gravity="center"
                    android:textColor="#b1b1b1"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/small_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fineones_yuan"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小玩意"
                    android:textColor="#b1b1b1"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/food_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/foods_yuan"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食品"
                    android:textColor="#b1b1b1"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/other_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/others_yuan"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textColor="#b1b1b1"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/special_good"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </FrameLayout>

    <include
        android:id="@+id/textView_empty"
        layout="@layout/emptyview_layout"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/fragment_goods_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
