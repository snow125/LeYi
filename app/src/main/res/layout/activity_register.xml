<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yhd.think.leyi.activity.RegisterActivity">

    <RelativeLayout
        style="@style/actionbar">

        <ImageView
            android:id="@+id/actionbar_back"
            android:layout_width="@dimen/actionbar_back_width"
            android:layout_height="@dimen/actionbar_back_height"
            style="@style/actionbar_weight_left"
            android:background="@drawable/actionbar_back"/>

        <TextView
            style="@style/actionbar_weight_center"
            android:text="注册易趣"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.yhd.think.leyi.view.CircleImageView
                    android:id="@+id/activity_register_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*性别"
                    android:textSize="17sp"/>

                <RadioGroup
                    android:id="@+id/activity_register_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/activity_register_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textSize="16sp"/>

                    <RadioButton
                        android:id="@+id/activity_register_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:textSize="16sp"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*用户名"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/activity_register_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="10dp"
                    android:hint="英文、汉字，3字符以上"
                    android:textSize="17sp"
                    android:background="@drawable/background_edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*密码"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/activity_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:hint="6位以上，字母数字混合"
                    android:textSize="17sp"
                    android:background="@drawable/background_edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:password="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*重复密码"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/activity_register_repeat_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:hint="请再输入一遍密码"
                    android:textSize="17sp"
                    android:background="@drawable/background_edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:password="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*手机号"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/activity_register_tel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入11位手机号"
                    android:textSize="17sp"
                    android:background="@drawable/background_edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*宣言"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/activity_register_word"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:hint="你的交换宣言呢？"
                    android:textSize="17sp"
                    android:background="@drawable/background_edittext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_register_add"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="地址"
                    android:textSize="17sp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/activity_register_school"
                    android:layout_height="50dp"
                    android:layout_width="0dp"
                    android:hint="学校"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:gravity="center"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/activity_register_register"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="注册"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_bg"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
