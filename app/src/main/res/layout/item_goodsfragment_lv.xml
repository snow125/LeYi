<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/listview_item_height">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/goods_picture"
        style="@style/listview_picture"
        android:layout_width="@dimen/listview_item_picture_height"
        android:layout_height="@dimen/listview_item_picture_height" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/item_pic2word"
        android:layout_toRightOf="@id/goods_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/time_click_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="@dimen/item_name"/>

        <TextView
            android:id="@+id/goods_request"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/goods_name"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="@dimen/item_request"/>

    </RelativeLayout>

</RelativeLayout>
